page{
  width: 100%;
  height: 100%;
}

.q_swiper{
  width: 100%;
  height: 93vh;
  /* background-color: rgb(212, 255, 192); */
}

.q_videoView{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 93vh;
  position: relative;
}

.box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 50vh;
  border-radius: 3vh;
  border: 3px solid rgb(104, 175, 251);
  color: #333;
  padding: 0px 20px;
}
.pinyin {
  height: 8vh;
  line-height: 8vh;
  margin-bottom: 5vh;
  font-family: "Lucida Console";
  font-size:1.6rem;
}
.number{
  height: 8vh;
  line-height: 8vh;
  margin-bottom: 5vh;
  font-family: "Verdana";
  font-size: 2.5rem;
}

.name{
  height: 8vh;
  line-height: 8vh;
  margin-bottom: 5vh;
  font-family: "Verdana";
  font-size: 2.5rem;
}
.card{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  height: 60vh;
  border: 8px solid #eee;
  box-shadow: 1vh 1vh 5px  #aaa;
  border-radius: 5vh;
  background-color: #fff;
}